# Telegram-115Bot配置文件, 请检查所有必填项目，如不填会影响机器人正常运行

############################################日志设置##################################
# log_level （必填）
# 日志级别
# debug|info|warning|error|critical
log_level: info
############################################Telegram设置##################################
# bot token （必填）
# 机器人唯一Token，如果没有@BotFather创建
bot_token: your_bot_token

# allowed_user （必填）
# 授权可以使用该bot的user_id，可以通过@getidsbot获取
# 数字类型不要引号
allowed_user: your_user_id

# 机器人名称 例如：@your_bot_name 
# 非必填，转存视频需要
bot_name: "@your_bot_name"

# telegram 的api信息 
# 非必填，转存视频需要
tg_api_id: your_tg_api_id
tg_api_hash: your_tg_api_hash

############################################115开放平台##################################
# 115_app_id 
# 申请地址https://open.115.com/
# 如已填写115_app_id, access_token,refresh_token可留空！
115_app_id: your_115_app_id

# 如没有115_app_id，请填写access_token和refresh_token！
# 115_app_id和token不能同时为空！！！
access_token: your_access_token
refresh_token: your_refresh_token

#############################################115离线下载设置###################################
# 下载完成后自动删除文件夹中的广告文件
clean_policy:
  # 是否开启自动清理 on: 开启 off: 关闭
  # 当设置为off时，所有策略不会生效，默认为开启
  switch: "on"
  # 文件小于设置值则自动删除单位K,M,G
  less_than: 400M

# 设置分类文件夹
# 分类文件夹设置只针对离线任务，离线下载完成后，会弹出需要移动到的分类文件夹，可以设置多个
category_folder:
  # 电影下的分类目录，不能修改
  - name: movies
    # 选择保存目录的第一级分类目录，不建议修改
    display_name: 电影
    # 一级分类目录(电影)下的二级分类，可按需修改或添加
    path_map:
        # 显示名称，可按需修改
      - name: 外语电影
        # 对应115上的完整路径，可以按需修改
        path: /影视/电影/外语电影
      - name: 华语电影
        path: /影视/电影/华语电影
      - name: 动画电影
        path: /影视/电影/动画电影
  # AV
  # 结构与电影完全一致不再赘述
  - name: av
    display_name: AV
    path_map:
      - name: 码の谜
        path: /AV/有码
      - name: 祼の真
        path: /AV/无码

#############################################AV日更#######################################
# 自动同步最新AV
av_daily_update:
  # 是否开启日更功能
  enable: false
  # 指定每天的同步时间(24h)建议设置为20:00
  sync_time: 20:00
  # 离线到115的保存路径
  save_path: /AV/日更
  # 通知我
  notify_me: true
  # 按年月整理，开启后会自动在保存目录创建年/月的文件夹
  sort_by_year_month: false

#############################################涩花Spider##################################
# 每天凌晨开启爬虫，爬取前一天的数据并离线到115
sehua_spider:
  # 是否开启涩花爬虫
  enable: false
  # 指定每天的同步时间(24h)建议设置为03:00
  # 默认同步前一天的数据，建议3点开更，避开凌晨高峰
  # 如频繁触发CF盾，建议将时间改成白天，白天成功率高
  sync_time: 03:00
  # BaseUrl
  # 涩花地址，建议填临时地址，速度快~
  # 留空默认永久地址 www.sehuatang.net; www.sehuatang.org
  base_url: wtzs1.q28qe.net
  # 支持爬取版块["国产原创", "亚洲无码原创", "亚洲有码原创", "高清中文字幕", "素人有码系列","4K原版","VR视频区","欧美无码"]
  # 至少填一个
  sections:
    - name: 国产原创
      save_path: /AV/涩花/国产原创
#    - name: 亚洲无码原创
#      save_path: /AV/涩花/亚洲无码原创
#    - name: 亚洲有码原创
#      save_path: /AV/涩花/亚洲有码原创
#    - name: 高清中文字幕
#      save_path: /AV/涩花/高清中文字幕
#    - name: 素人有码系列
#      save_path: /AV/涩花/素人有码
#    - name: 4K原版
#      save_path: /AV/涩花/4K原版
#    - name: VR视频区
#      save_path: /AV/涩花/VR视频区
#    - name: 欧美无码
#      save_path: /AV/涩花/欧美无码

  # 通知我
  notify_me: true
  # 按年月整理，开启后会自动在保存目录创建年/月的文件夹
  sort_by_year_month: false
  
#############################################软链接设置####################################
# strm可以极大地减小请求115的次数避免风控，建议开启
# create_strm只针对通过“dl”命令下载的资源有效，不建议使用“dl”下载AV资源
# AV资源建议使用“av”命令下载，并搭配第三方削刮工具(MDC-NG)自动生成软链，体验更好
# 是否创建软链（非302）
create_strm: true
# CloudDrive2 挂载115的根目录
mount_root: /CloudNAS/115
# 软链接根目录，软链接目录可以看成是115挂载目录的镜像，也是Emby设置媒体库的目录，需要挂载到容器
strm_root: /media/115

#############################################EMBY设置####################################
# 有新资源入库时会同时Emby扫库，所有媒体库建议按“加入日期”到排序
# EmbyServer地址 格式 http(s)://ip(域名):端口
emby_server: http://your_emby_server:8096
# Emby APIkey  Emby-->API秘钥-->新建
api_key: your_api_key

#############################################电影订阅####################################
# 如果留空则无法通过“sm”命令订阅电影
# 自动订阅https://nullbr.online/上的资源，有满足要求的自动离线到115
# 自动订阅需要申请app_id，参考申请方法
# https://nullbr.online/api?title=00.%F0%9F%93%A3api%E5%BC%80%E6%94%BE%E8%AE%A1%E5%88%92
x_app_id: your_app_id
x_api_key: your_api_key
# 订阅条件，全部满足才订阅
sub_condition:
  # 包含中字
  zh_cn: true
  # Dolby Vision
  dolby_vision: false
  # 分辨率优先级
  resolution_priority:
    - 2160
    - 1080
##########################################Aria2#######################################
# 设置Aria2可选择将离线的影片推送到Aria2
# 默认关闭
aria2:
  # 是否启用
  enable: false
  # 指定设备名称, 例如“我的群晖”，“我的飞牛”
  device_name: 我的飞牛
  # Arai2地址 http(s)://your_aria2_host
  host: http://your_aria2_host
  # Aria2 RPC端口
  port: 6800
  # Aria2 密钥
  rpc_secret: your_aria2_rpc_secret
  # 下载目录 (Aari2容器中的下载位置)
  download_path: "/Downloads"
  ##########################################AI#######################################
# AI支持
ai:
  # 请求地址
  api_url: https://api.siliconflow.cn/v1
  # api_key
  api_key: sk-xxxxxxxxxxxxxxxxxxx
  # 模型
  model: deepseek-ai/DeepSeek-V3.2
